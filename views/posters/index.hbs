{{#extends 'base'}}

{{#block 'title'}}Our Posters{{/block}}

{{#block 'content'}}
<a href="" class="btn btn-primary my-3">New Poster</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Date</th>
            <th>Stock</th>
            <th>Height</th>
            <th>Width</th>
        </tr>
    </thead>
    {{#each posters}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>{{this.date}}</td>
            <td>{{this.height}}</td>
            <td>{{this.width}}</td>
        </tr>
    {{/each}}

</table>
{{/block}}



{{/extends}}